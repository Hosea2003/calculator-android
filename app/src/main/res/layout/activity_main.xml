<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <!-- Display Section (40% of height) -->
    <LinearLayout
        android:id="@+id/display_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="bottom">

<!--        Expression-->
        <TextView
            android:id="@+id/tv_expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryForeground"
            android:textSize="22sp"
            android:gravity="end"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryForeground"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        app:layout_constraintTop_toBottomOf="@id/display_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/top_rounded_rectangle"
        android:paddingHorizontal="12dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <!-- First Row -->
        <Button android:text="AC" style="@style/CalcButton.Special"/>
        <Button style="@style/CalcButton.Special" android:text="⌫" />
        <Button style="@style/CalcButton.Number" android:text="%" />
        <Button style="@style/CalcButton.Operator" android:text="÷" />

        <!-- Second Row -->
        <Button style="@style/CalcButton.Number" android:text="7" />
        <Button style="@style/CalcButton.Number" android:text="8" />
        <Button style="@style/CalcButton.Number" android:text="9" />
        <Button style="@style/CalcButton.Operator" android:text="×" />

        <!-- Third Row -->
        <Button style="@style/CalcButton.Number" android:text="4" />
        <Button style="@style/CalcButton.Number" android:text="5" />
        <Button style="@style/CalcButton.Number" android:text="6" />
        <Button style="@style/CalcButton.Operator" android:text="−" />

        <!-- Fourth Row -->
        <Button style="@style/CalcButton.Number" android:text="1" />
        <Button style="@style/CalcButton.Number" android:text="2" />
        <Button style="@style/CalcButton.Number" android:text="3" />
        <Button style="@style/CalcButton.Operator" android:text="+" />

        <!-- Fifth Row -->
        <Button style="@style/CalcButton.Number" android:text="+/−" />
        <Button style="@style/CalcButton.Number" android:text="0" />
        <Button style="@style/CalcButton.Number" android:text="." />
        <Button style="@style/CalcButton.Special" android:text="=" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>