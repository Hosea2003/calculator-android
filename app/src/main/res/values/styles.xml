<resources>
    <!-- Base button style -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primaryForeground</item>
        <item name="android:backgroundTint">#F06F0E</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_background</item>
    </style>

    <!-- Styles for specific types -->
    <style name="CalcButton.Number" parent="CalcButton">
        <item name="android:backgroundTint">@color/numberCard</item>
    </style>

    <style name="CalcButton.Operator" parent="CalcButton">
        <item name="android:backgroundTint">@color/card</item>
    </style>

    <style name="CalcButton.Special" parent="CalcButton">
<!--        <item name="android:backgroundTint">#1E1E1E</item>-->
        <item name="android:backgroundTint">@color/specialColor</item>
        <item name="android:textColor">@color/specialForeground</item>
    </style>
</resources>
